<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imPpic"
        android:minHeight="50dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivFoto"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:minHeight="200dp"
        android:layout_below="@+id/imPpic"

         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCaption"
        android:layout_toRightOf="@+id/tvusrname"
        android:layout_below="@+id/tvLikes"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textStyle="normal"
        android:ellipsize="end"
        android:maxLines="3" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvUsername"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imPpic"
        android:layout_toEndOf="@+id/imPpic"
        android:maxLines="1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvTime"
        android:layout_alignRight="@+id/tvUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvusrname"
        android:layout_below="@+id/tvLikes"
        android:layout_above="@+id/tvComment"
        android:layout_alignBottom="@+id/tvComment"
        android:maxLines="1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="likes"
        android:id="@+id/tvLikes"
        android:layout_below="@+id/ivFoto"
        android:maxLines="1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCommentCount"
        android:layout_below="@+id/tvCaption"
        android:textColor="@android:color/holo_orange_dark"
        android:maxLines="2"
        android:textStyle="italic"
        android:ellipsize="end"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCommentUsrname"
        android:layout_below="@+id/tvCommentCount"
        android:textColor="@android:color/holo_blue_dark"
        android:maxLines="1"
        android:textStyle="italic"
        android:ellipsize="end"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvComment"
        android:layout_below="@+id/tvCommentCount"
        android:layout_toRightOf="@+id/tvCommentUsrname"
        android:textColor="@android:color/holo_red_dark"
        android:maxLines="1"
        android:textStyle="italic"
        android:ellipsize="end"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCommentUsrname1"
        android:layout_below="@+id/tvCommentUsrname"
        android:textColor="@android:color/holo_blue_dark"
        android:maxLines="1"
        android:textStyle="italic"
        android:ellipsize="end"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvComment1"
        android:layout_below="@+id/tvCommentUsrname"
        android:layout_toRightOf="@+id/tvCommentUsrname1"
        android:textColor="@android:color/holo_red_dark"
        android:maxLines="1"
        android:textStyle="italic"
        android:ellipsize="end"
        android:textSize="15sp" />

</RelativeLayout>